@model Nop.Web.Models.Catalog.CategorySimpleModel
@if (Model.SubCategories.Count > 0)
{
    @*@await Html.PartialAsync("_SubCategoryLine.TopMenu", Model)*@
    <li style="display:inline-grid">
        <a href="@Url.RouteUrl("Category", new { SeName = Model.SeName })">
            <strong>
                @Model.Name
            </strong>
        </a>


        @foreach (var subCategory in Model.SubCategories)
        {
            <a href="@Url.RouteUrl("Category", new { SeName = subCategory.SeName })">
                @subCategory.Name
            </a>
        }


    </li>

    @*@await Html.PartialAsync("_SubCategoryLine.TopMenu", Model)*@
}
else
{
    <li style="display: inline-grid;">
        <a href="@Url.RouteUrl("Category", new { SeName = Model.SeName })">
            <strong>
                @Model.Name
            </strong>
            @if (Model.NumberOfProducts.HasValue)
            {
                <span class="head-number op-number">
                    @if (Model.NumberOfProducts.Value < 0)
                    {
                        @:0@(Model.NumberOfProducts.Value)
                    }
                    @T("Categories.TotalProducts", Model.NumberOfProducts.Value)
                </span>
                <span>&nbsp;</span>
            }
        </a>
    </li>
}
